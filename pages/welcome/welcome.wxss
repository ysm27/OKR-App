.page-container{
  height: 100vh;
  position: relative;
}
.circle{
  width: 1500rpx;
  height: 1500rpx;
  border-radius: 50%;
  position: absolute;
  top: -500rpx;
  left: -250rpx;
  transform-origin:50% 40%;
  animation: move 4s linear 1s infinite;
  background-color: #E7E5E5;
}
.circle-1{
  animation-delay:1s;
  z-index: -1;
  background-color: rgb(231, 229, 229);
}
.circle-2{
  animation-delay:2s;
  z-index: -2;
  background-color: rgba(231, 229, 229, 0.3);
}
.circle-3{
  animation-delay:3s;
  z-index: -3;
  background-color: rgba(231, 229, 229, 0.5);
}
@keyframes move{
  0%{
    transform: rotate(0)
  }
  100%{
    transform: rotate(360deg)
  }
}
.page-title{
  padding: 150rpx 0 80rpx 100rpx;
  z-index: 91;
}
.cn-title{
  font-size: 24px;
  font-weight: bold;
  margin-bottom: 10rpx;
}
.en-title{
  font-size: 18px;
  color: 	#696969;
}
.title-description{
  margin: 0 0 450rpx 100rpx;
  z-index: 90;
}
.description-item{
  font-size: 12px;
  color: #696969;
  margin-bottom: 10rpx;
}
.page-container .start-btn{
  width: 500rpx;
  margin: 0 auto;
  background-color: #535353;
  color: #fff;
  z-index: 99;
}
.hover-color{
  opacity: .8;
}